<div class="well well-small well-condensed">
  <div class="pull-left">
    <%= render 'admin/categories/search' %>
  </div>
  <div class="pull-left filter">
    <% if params[:q].try(:[], 'name_cont').present? %>
      <span class="label label-info">
        <%= link_to raw("&times;"),
                    hash_path(admin_categories_path(:type => params[:type],
                                              :subtype => params[:subtype],
                                              :filter => params[:filter],
                                              :q => nil)),
                    :class => 'close-tag', :rel => 'tooltip', :title => 'Remove filter' %>
        <%= params[:q][:name_cont] %>
      </span>
    <% end %>
  </div>
  <div class="pull-right">
    <%= link_to t('categories.new'),
                new_admin_category_path,
                :class => 'btn btn-primary',
                :remote => true %>
  </div>
</div>
