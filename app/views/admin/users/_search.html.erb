<%= form_tag admin_users_path(:type => params[:type],
                              :subtype => params[:subtype]),
              :class => 'form-search', :id => 'search-form' do %>
  <%= text_field_tag 'q[fullname_or_username_or_email_cont]',
                      params[:q].try(:[], 'fullname_or_username_or_email_cont'),
                      :placeholder => t('users.search'),
                      :class => 'span2 search-query',
                      :maxlength => "30" %>
  <%= link_to raw('<i class="icon-search"></i>'), nil, :class => 'btn search' %>
<% end %>

<script type="text/javascript">
  $('#search-form').initSearch('fullname_or_username_or_email');
</script>
