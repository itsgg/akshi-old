<script type="text/javascript">
  <% if home_page? %>
    <% if current_user.try(:teacher?, course.id) %>
      $('#course_<%= course.id %> <%= elem %>').iosbadge({
        theme: 'blue',
        size: 22,
        content: '<%= t('.teaching') %>'
      });
    <% end %>
    <% if current_user.try(:student?, course.id) %>
      $('#course_<%= course.id %> <%= elem %>').iosbadge({
        theme: 'blue',
        size: 22,
        content: '<%= t('.learning') %>'
      });
    <% end %>
  <% end %>
  <% if teach_page? %>
      <% unless course.published? %>
        $('#course_<%= course.id %> <%= elem %>').iosbadge({
          theme: 'red',
          size: 22,
          content: '<%= t('.not_published') %>'
        });
      <% end %>
  <% end %>
</script>
