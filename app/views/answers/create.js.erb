<% if @success %>
  $(window).hashchange();
<% else %>
  $('#modal').html('<%= escape_javascript(
                        render "answers/new", :course => @quiz.course,
                               :quiz => @quiz, :question => @question,
                               :answer => @answer) %>');
  <%= render 'shared/modal_flash' %>
<% end %>
window.initAjaxCSRF('<%= form_authenticity_token %>');