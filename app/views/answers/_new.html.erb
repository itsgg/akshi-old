<%= form_for [question, answer],
            :html => {:class => 'form-horizontal form-horizontal-mini', :remote => true} do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h4><%= t('answers.new') %></h4>
  </div>
  <div class="modal-body">
    <%= hidden_field_tag 'subtype', params[:subtype] %>
    <%= hidden_field_tag 'type', params[:type] %>
    <fieldset>
      <%= render :layout => 'shared/bootstrap_field',
                 :locals => {:object => answer, :type => :content, :f => f} do %>

        <%= f.text_area :content,
                        :placeholder => t('answers.placeholders.content'),
                        :class => 'rich' %>
      <% end %>
    </fieldset>
  </div>
  <div class="modal-footer">
    <%= f.submit t('answers.create'), :class => 'btn btn-primary' %>
    <button class="btn" data-dismiss="modal">
      <%= t('site.close') %>
    </button>
  </div>
<% end %>
