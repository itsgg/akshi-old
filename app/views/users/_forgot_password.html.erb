<%= form_tag send_reset_users_path(:type => params[:type]), :class => 'form-horizontal',
    :remote => true  do %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h4><%= t('forgot_password.forgot_password') %></h4>
  </div>
  <div class="modal-body">
    <fieldset>
      <div class="control-group">
        <%= label_tag t('forgot_password.username_email'), nil, :class => 'control-label' %>
        <div class="controls">
          <%= text_field_tag 'username_email' %>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="modal-footer">
    <%= submit_tag t('forgot_password.submit'), :class => 'btn btn-primary' %>
    <button class="btn" data-dismiss="modal">
      <%= t('site.close') %>
    </button>
  </div>
<% end %>

<script type="text/javascript">
  $('#modal').on('hidden', function() {
    location.hash = '<%= raw hash_path(root_path) %>';
  });
</script>
