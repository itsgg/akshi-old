<% if @success %>
  $('#modal').modal('hide');
  <%= render 'shared/page_flash' %>
<% else %>
  $('#modal').html('<%= escape_javascript(render "users/reset_password",
                                                 :user => @user) %>');
  <%= render 'shared/modal_flash' %>
<% end %>
window.initAjaxCSRF('<%= form_authenticity_token %>');