<% if @success %>
  $(window).hashchange();
<% else %>
  $('#content').html('<%= escape_javascript(
                            render "users/profile", :user => @user,
                            :old_avatar => @old_avatar) %>');
  <%= render 'shared/page_flash' %>
<% end %>
window.initAjaxCSRF('<%= form_authenticity_token %>');