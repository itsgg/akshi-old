<div class="well well-small well-condensed">
  <div class="pull-left">
    <%= render 'posts/search' %>
  </div>
  <% if logged_in_as_admin? %>
    <div class="pull-right">
      <%= link_to t('posts.new'),
                  new_post_path(:page => params[:page]),
                  :class => 'btn btn-primary',
                  :remote => true %>
    </div>
  <% end %>
</div>
