<%= form_tag posts_path(:type => params[:type], :subtype => params[:subtype]),
                        :class => 'form-search', :id => 'search-form' do %>
  <%= text_field_tag 'q[content_cont]',
                      params[:q].try(:[], 'content_cont'),
                      :placeholder => t('posts.search'),
                      :class => 'span2 search-query',
                      :maxlength => "30" %>
  <%= link_to raw('<i class="icon-search"></i>'), nil, :class => 'btn search' %>
<% end %>

<script type="text/javascript">
  $('#search-form').initSearch('content');
</script>
