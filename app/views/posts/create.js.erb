<% if @success %>
  $('#modal').modal('hide');
  location.hash = '<%= raw hash_path(post_path(@post,
                                                   :touch => Time.now.to_i)) %>';
  <%= render 'shared/page_flash' %>
<% else %>
  $('#modal').html('<%= escape_javascript(render "posts/new",
                          :post => @post) %>');
  <%= render 'shared/modal_flash' %>
<% end %>
window.initAjaxCSRF('<%= form_authenticity_token %>');