<%= form_for post,
             :html => {:class => 'form-horizontal form-horizontal-mini', :remote => true} do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h4>
      <%= t('posts.new') %>
    </h4>
  </div>
  <div class="modal-body">
    <%= hidden_field_tag 'page', (params[:page].blank? ? "1" : params[:page]) %>
    <fieldset>
      <%= render :layout => 'shared/bootstrap_field',
                 :locals => {:object => post, :type => :title,
                             :f => f} do %>
        <%= f.text_field :title,
                         :placeholder => t('posts.placeholders.title')%>
      <% end %>
      <%= render :layout => 'shared/bootstrap_field',
                 :locals => {:object => post, :type => :content,
                             :f => f} do %>
        <%= f.text_area :content,
                        :placeholder => t('posts.placeholders.content'),
                        :class => 'rich' %>
      <% end %>
    </fieldset>
  </div>
  <div class="modal-footer">
    <%= f.submit t('posts.create'), :class => 'btn btn-primary' %>
    <button class="btn" data-dismiss="modal">
      <%= t('site.close') %>
    </button>
  </div>
<% end %>
