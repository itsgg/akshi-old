<% if @success %>
  // Go to the first page
  location.hash = '<%= raw hash_path(course_announcements_path(@course,
                                        :subject => "All",
                                        :type => params[:type],
                                        :subtype => params[:subtype],
                                        :touch => Time.now.to_i)) %>';
<% else %>
  $('#modal').html('<%= escape_javascript(render "announcements/new",
                          :course => @course, :announcement => @announcement) %>');
  <%= render 'shared/modal_flash' %>
<% end %>
window.initAjaxCSRF('<%= form_authenticity_token %>');